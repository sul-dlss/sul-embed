<%= render TabpanelComponent.new(id: 'object-content', title: 'Contents') do |component| %>
  <% component.with_body do %>
    <ul id="content-list"
          data-controller="content-list"
          data-action="thumbnails-found@window->content-list#drawThumbnails"
          role="tablist">
          <%= render Document::ContentListItemComponent.with_collection(resource_files_collection, viewer:) if document_viewer? %>
      </ul>
  <% end %>
<% end %>
