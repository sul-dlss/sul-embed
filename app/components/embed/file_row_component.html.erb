
<tr role="row" aria-level="<%= level %>" aria-posinset="<%= pos_in_set %>" aria-setsize="<%= set_size %>" tabindex="0" data-tree-role="leaf" data-filepath="<%= filepath %>">
  <td role="gridcell" style="<%= first_td_style %>" class="sul-embed-filename-cell">
    <div style="display: flex;">
      <div style="margin-right: 5px;">
        <i class="sul-i-2x <%= file_type_icon %>"></i>
      </div>
      <div style="max-width: 95%; overflow-wrap: break-word;">
        <%= title %>
        <% if label %>
          <p data-tree-role="label"><%= label %></p>
        <% end %>
      </div>
    </div>
  </td>
  <td role="gridcell"><%= file_size_text%></td>
  <td role="gridcell">    
    <% if download? %>
      <a href="<%= file_url %>" target='_blank' rel='noopener noreferrer' download=''>
        <i class='sul-i-download-3'></i> Download
      </a>
      <%= render 'embed/restrictions_text_for_file', file: file %>
    <% end %>
  </td>
</tr>
