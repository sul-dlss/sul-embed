// All classes should be scoped within the .sul-embed-container
@import 'sul-styles';
@import 'sul_variables';
@import 'mixins';
@import 'modules/buttons';
@import 'modules/popup_panels';
@import 'modules/shadows';
@import 'modules/utility';

.#{$namespace}-container {
  background: $white-color;
  border: 1px solid $color-pantone-405;
  color: $sul-font-color;
  font-family: 'Source Sans Pro', 'Arial Unicode MS', Helvetica, sans-serif;
  font-size: $font-size-base;
  overflow-y: hidden;
  width: 1px;
  min-width: 99%;
  *width: 99%;

  * {
    padding: 0;
    margin: 0;
  }

  a,
  a:hover,
  a:focus {
    border-bottom: 1px dotted $sul-link-border-color;
    color: $sul-font-color;
    text-decoration: none;
  }

  .#{$namespace}-header {
    background: $sul-border-color;
    font-weight: $sul-header-weight;
    min-height: 40px;
    overflow: hidden;
    padding: 0 15px;
    white-space: nowrap;

    .#{$namespace}-header-title {
      color: white;
      display: inline-block;
      font-size: $sul-title-size;
      overflow: hidden;
      text-overflow: ellipsis;
      vertical-align: middle;
      width: 100%;
      margin-top: 4px;
    }

  }

  .#{$namespace}-item-count {
    color: white;
    border-bottom: 0;
    font-size: $font-size-base;
    font-weight: $sul-header-weight;
    min-width: 75px;
    line-height: 40px;
    vertical-align: middle;
    padding: 0;
    display: inline;
    float: left;
  }

  .#{$namespace}-footer {
    @include top-shadow;
    background: $sul-border-color;
    min-height: 30px;
    position: relative;
    padding: 0 15px;

    .#{$namespace}-footer-tool {
      margin: 4px 15px 0 0;
    }

    .#{$namespace}-btn.sul-i-share {
      font-weight: bold;
    }

    .#{$namespace}-footer-toolbar {
      padding-top: 0;
      vertical-align: middle;
    }

    .sul-i-download-3 {
      margin-right: 1px;
      padding-right: 1px;
    }

    .#{$namespace}-download-count {
      background-color: $btn-default-bg;
      border-radius: 16px;
      color: $color-pantone-405;
      display: inline-block;
      font-size: 12px;
      line-height: 16px;
      margin-bottom: 1px;
      margin-left: 2px;
      min-width: 18px;
      padding-left: 3px;
      padding-right: 3px;
      text-align: center;
      vertical-align: text-top;
    }
  }
}

.#{$namespace}-stanford-only a {
  @include stanford-only(right, 20px);
}

.#{$namespace}-stanford-only-text {
  @include stanford-only(left, 15px);
}

.#{$namespace}-thumb-restricted-text {
  color: $sul-restricted-text-color;
}

.#{$namespace}-header {
  @include shadow(1);
  position: relative;
  z-index: 10;
}

.#{$namespace}-footer {
  @include shadow(1);
}
