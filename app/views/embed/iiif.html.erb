<!DOCTYPE html>
<html>
  <head>
    <style>
      #sul-embed-object {
        position: absolute;
        left: 0;
        right: 0;
        top: 0;
        bottom: 3px;
      }
    </style>
    <%= stylesheet_link_tag 'mirador.css' %>
  </head>
  <body>
    <div class="sul-embed-container" id='sul-embed-object'>
      <div class='sul-embed-body sul-embed-mirador' style="max-height:100%;">
        <div
          id='sul-embed-mirador'
          class='mirador'
          data-mirador-uri='<%= @embed_request.url %>'
          data-canvas-id='<%= @embed_request.canvas_id %>'
          data-canvas-index='<%= @embed_request.canvas_index %>'
          data-hide-title='<%= @embed_request.hide_title? %>'
          data-show-attribution='false'
          data-search='<%= @embed_request.search %>'
          data-suggested-search='<%= @embed_request.suggested_search %>'
          data-enable-comparison='<%= @embed_request.enable_comparison? %>'
          data-viewer-config='<%= @embed_request.iiif_initial_viewer_config %>'
          style='height:100%; width:100%'>
        </div>
        <% if Rails.env.development? %>
          <%= vite_react_refresh_tag %>
        <% end %>
        <%= vite_javascript_tag 'mirador' %>
      </div>
    </div>
    <%= render 'analytics' %>
  </body>
</html>
